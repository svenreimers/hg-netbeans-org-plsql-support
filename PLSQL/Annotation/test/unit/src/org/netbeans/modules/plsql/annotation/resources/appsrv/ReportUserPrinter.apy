-- Prepare_Insert___
--    Set all default values for a new instance (ON-NEW-RECORD) of this
--    logical unit by calling procedure Add_Attr.
--
-- Unpack_Check_Insert___
--    Unpack the attribute list, check all attributes from the client
--    and generate all default values before creation of the new object.
--
-- Insert___
--    Insert a new LU-instance into the database and return the values
--    for OBJID and OBJVERSION.
-----------------------------------------------------------------------------

PROCEDURE Prepare_Insert___ (
   attr_ IN OUT VARCHAR2 )
IS
BEGIN
   Client_SYS.Clear_Attr(attr_);
END Prepare_Insert___;


PROCEDURE Unpack_Check_Insert___ (
   attr_   IN OUT VARCHAR2,
   newrec_ IN OUT &TABLE%ROWTYPE )
IS
   ptr_   NUMBER;
   name_  VARCHAR2(30);
   value_ VARCHAR2(2000);
BEGIN
   ptr_ := NULL;
   WHILE (Client_SYS.Get_Next_From_Attr(attr_, ptr_, name_, value_)) LOOP
      IF (name_ = 'REPORT_ID') THEN
         newrec_.report_id := value_;
         Report_Definition_API.Exist(newrec_.report_id);
      ELSIF (name_ = 'AVAILABLE_PRINTER') THEN
         newrec_.available_printer := value_;
        IF (value_ IS NOT NULL) THEN
            Logical_Printer_API.Exist(newrec_.available_printer);
         END IF;
      ELSIF (name_ = 'USER_ID') THEN
         newrec_.user_id := value_;
         Application_User_API.Exist(newrec_.user_id);
      ELSIF (name_ = 'LANGUAGE_CODE') THEN
         newrec_.language_code := value_;
         Iso_Language_API.Exist(newrec_.language_code);
      ELSIF (name_ = 'DEFAULT_PRINTER') THEN
         newrec_.default_printer := value_;
      ELSE
         Error_SYS.Item_Not_Exist(lu_name_, name_, value_);
      END IF;
   END LOOP;
   Client_SYS.Clear_Attr(attr_);
   Error_SYS.Check_Not_Null(lu_name_, 'REPORT_ID', newrec_.report_id);
   Error_SYS.Check_Not_Null(lu_name_, 'USER_ID', newrec_.user_id);
   Error_SYS.Check_Not_Null(lu_name_, 'LANGUAGE_CODE', newrec_.language_code);
   Error_SYS.Check_Not_Null(lu_name_, 'DEFAULT_PRINTER', newrec_.default_printer);
EXCEPTION
   WHEN value_error THEN
      Error_SYS.Item_Format(lu_name_, name_, value_);
END Unpack_Check_Insert___;


PROCEDURE Insert___ (
   objid_      OUT    VARCHAR2,
   objversion_ OUT    VARCHAR2,
   newrec_     IN OUT &TABLE%ROWTYPE,
   attr_       IN OUT VARCHAR2 )
IS
BEGIN
   newrec_.rowversion := sysdate;
   objversion_ := to_char(newrec_.rowversion,'YYYYMMDDHH24MISS');
   INSERT
      INTO report_user_printer_tab (
         report_id,
         available_printer,
         user_id,
         language_code,
         default_printer,
         rowversion)
      VALUES (
         newrec_.report_id,
         newrec_.available_printer,
         newrec_.user_id,
         newrec_.language_code,
         newrec_.default_printer,
         newrec_.rowversion)
      RETURNING &OBJID INTO objid_;
EXCEPTION
   WHEN dup_val_on_index THEN
      Error_SYS.Record_Exist(lu_name_);
END Insert___;

