DEFINE OBJID         = rowid
DEFINE OBJVERSION    = "ltrim(lpad(to_char(rowversion,'YYYYMMDDHH24MISS'),2000))"

-----------------------------------------------------------------------------
-------------------- VIEWS FOR SELECTS --------------------------------------
-----------------------------------------------------------------------------

PROMPT Creating &VIEW view

CREATE OR REPLACE VIEW &VIEW AS
SELECT report_id                      report_id,
       available_printer              available_printer,
       user_id                        user_id,
       language_code                  language_code,
       default_printer                default_printer,
       &OBJID                         objid,
       &OBJVERSION                    objversion
FROM   report_user_printer_tab
WITH   read only;

COMMENT ON TABLE &VIEW
   IS 'LU=&LU^PROMPT=Report User Printer^MODULE=&MODULE^';

COMMENT ON COLUMN &VIEW..report_id
   IS 'FLAGS=KMI-L^DATATYPE=STRING(30)/UPPERCASE^PROMPT=Report Id^REF=ReportDefinition^';
COMMENT ON COLUMN &VIEW..available_printer
   IS 'FLAGS=K-I-L^DATATYPE=STRING(30)/UPPERCASE^PROMPT=Available Printer^REF=LogicalPrinter^';
COMMENT ON COLUMN &VIEW..user_id
   IS 'FLAGS=KMI-L^DATATYPE=STRING(30)/UPPERCASE^PROMPT=User Id^REF=ApplicationUser^';
COMMENT ON COLUMN &VIEW..language_code
   IS 'FLAGS=PMI--^DATATYPE=STRING(2)^PROMPT=Language Code^REF=IsoLanguage^';
COMMENT ON COLUMN &VIEW..default_printer
   IS 'FLAGS=AMIUL^DATATYPE=BOOLEAN^PROMPT=Default Printer^';

