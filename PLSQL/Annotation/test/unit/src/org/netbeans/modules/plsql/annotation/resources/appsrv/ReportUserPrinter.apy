-- Unpack_Check_Update___
--    Unpack the attribute list, check all attributes from the client
--    and generate all default values before modifying the object.
--
-- Update___
--    Update an existing LU-instance in the database and return the
--    the new OBJVERSION.
-----------------------------------------------------------------------------

PROCEDURE Unpack_Check_Update___ (
   attr_   IN OUT VARCHAR2,
   newrec_ IN OUT &TABLE%ROWTYPE,
   objid_  IN     VARCHAR2 )
IS
   ptr_   NUMBER;
   name_  VARCHAR2(30);
   value_ VARCHAR2(2000);
BEGIN
   ptr_ := NULL;
   WHILE (Client_SYS.Get_Next_From_Attr(attr_, ptr_, name_, value_)) LOOP
      IF (name_ = 'REPORT_ID') THEN
         Error_SYS.Item_Update(lu_name_, 'REPORT_ID');
      ELSIF (name_ = 'AVAILABLE_PRINTER') THEN
         Error_SYS.Item_Update(lu_name_, 'AVAILABLE_PRINTER');
      ELSIF (name_ = 'USER_ID') THEN
         Error_SYS.Item_Update(lu_name_, 'USER_ID');
      ELSIF (name_ = 'LANGUAGE_CODE') THEN
         Error_SYS.Item_Update(lu_name_, 'LANGUAGE_CODE');
      ELSIF (name_ = 'DEFAULT_PRINTER') THEN
         newrec_.default_printer := value_;
      ELSE
         Error_SYS.Item_Not_Exist(lu_name_, name_, value_);
      END IF;
   END LOOP;
   Client_SYS.Clear_Attr(attr_);
   Error_SYS.Check_Not_Null(lu_name_, 'DEFAULT_PRINTER', newrec_.default_printer);
EXCEPTION
   WHEN value_error THEN
      Error_SYS.Item_Format(lu_name_, name_, value_);
END Unpack_Check_Update___;


PROCEDURE Update___ (
   objid_      IN     VARCHAR2,
   oldrec_     IN     &TABLE%ROWTYPE,
   newrec_     IN OUT &TABLE%ROWTYPE,
   attr_       IN OUT VARCHAR2,
   objversion_ IN OUT VARCHAR2,
   by_keys_    IN     BOOLEAN DEFAULT FALSE )
IS
BEGIN
   newrec_.rowversion := sysdate;
   objversion_ := to_char(newrec_.rowversion,'YYYYMMDDHH24MISS');
   IF by_keys_ THEN
      UPDATE report_user_printer_tab
         SET report_id = newrec_.report_id,
             available_printer = newrec_.available_printer,
             user_id = newrec_.user_id,
             language_code = newrec_.language_code,
             default_printer = newrec_.default_printer,
             rowversion = newrec_.rowversion
         WHERE report_id = newrec_.report_id
             AND    available_printer = newrec_.available_printer
             AND    user_id = newrec_.user_id
             AND    language_code = newrec_.language_code;
   ELSE
      UPDATE report_user_printer_tab
         SET report_id = newrec_.report_id,
             available_printer = newrec_.available_printer,
             user_id = newrec_.user_id,
             language_code = newrec_.language_code,
             default_printer = newrec_.default_printer,
             rowversion = newrec_.rowversion
         WHERE &OBJID = objid_;
   END IF;
EXCEPTION
   WHEN dup_val_on_index THEN
      Error_SYS.Record_Exist(lu_name_);
END Update___;

