-- Exist
--   Checks if given pointer (e.g. primary key) to an instance of this
--   logical unit exists. If not an exception will be raised.
-----------------------------------------------------------------------------

PROCEDURE Exist (
   report_id_ IN VARCHAR2,
   available_printer_ IN VARCHAR2,
   user_id_ IN VARCHAR2,
   language_code_ IN VARCHAR2 )
IS
BEGIN
   General_SYS.Init_Method(lu_name_, '&PKG', 'Exist', TRUE);
   IF (NOT Check_Exist___(report_id_, available_printer_, user_id_, language_code_)) THEN
      Error_SYS.Record_Not_Exist(lu_name_);
   END IF;
END Exist;

